<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gooner10.nepaliechord">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ChordApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mainsong.MainSongActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".detailsong.SongDetailActivity"
            android:parentActivityName=".detailsong.SongDetailActivity" />
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".artistsong.ArtistSongActivity"
            android:label="@string/title_activity_artist_song"
            android:parentActivityName=".mainsong.MainSongActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>